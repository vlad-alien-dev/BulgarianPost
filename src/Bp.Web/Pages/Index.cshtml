@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Bp.Localization
@using Volo.Abp.Users
@model Bp.Web.Pages.IndexModel
@inject IHtmlLocalizer<BpResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="badge badge-success h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Happy to see you here!</h5>
        </div>
        <h5 class="mb-3"><i class="fas fa-cubes text-secondary d-block my-3 fa-2x"></i> </h5>

        <h1>@L["LongWelcomeMessage"]</h1>

        <a abp-button="Primary" href="/Articles"><i class="fa fa-sign-in"></i> @L["To The News!"]</a>


    </div>   
</div>
